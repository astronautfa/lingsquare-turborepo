{
  "extends": "@lingsquare/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@ui/components/*": ["../../packages/ui/src/components/ui/*"],
      "@ui/molecules/*": ["../../packages/ui/src/components/molecules/*"],
      "@ui/lib/*": ["../../packages/ui/src/lib/*"],
      "@ui/styles/*": ["../../packages/ui/src/styles/*"],
      "@lingsquare/supabase/*": ["../../packages/supabase/src/*"],
      "@lingsquare/vidstack": ["../../packages/vidstack/react/dist-npm/index.d.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "**/*.cjs",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
